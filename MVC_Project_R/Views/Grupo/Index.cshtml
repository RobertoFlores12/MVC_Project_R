@model IEnumerable<MVC_Project_R.Models.GrupoViewModel>
@using ADS_Project.Utils
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="container">
    <div class="col-sm-12">
        <div class="row">
            <div class="col-sm-6">
                <h3>Grupo</h3>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-success d-block" asp-action="Form" asp-route-operaciones="@Operaciones.agregar">Agregar Grupo</a>
            </div>
        </div>

    </div>
    <div class="col-sm-12">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.idGrupo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idCarrera)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idMateria)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.idProfesor)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ciclo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.year)
                        </th>
                        <th>
                            Acciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.idGrupo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idCarrera)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idMateria)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.idProfesor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ciclo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.year)
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-route-idGrupo="@item.idGrupo" asp-action="Form" asp-route-operaciones="@Operaciones.modificar">Modificar</a>
                                <a class="btn btn-warning" asp-route-idGrupo="@item.idGrupo" asp-action="Form" asp-route-operaciones="@Operaciones.leer">Leer</a>
                                <a class="btn btn-danger eliminar" asp-route-idGrupo="@item.idGrupo" asp-action="Delete">Eliminar</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table> }
        else
        {
            <h3 class="text-center">Lista Vacia.</h3>}
    </div>
</div>